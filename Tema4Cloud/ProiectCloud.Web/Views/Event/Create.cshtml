            @Html.LabelFor(model => model.Description, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Description, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Description, "", new { @class = "text-danger" })
            </div>
        </div>





        <div class="form-group" style="display:none">
            <div class="col-md-10" style="display:block">
                @Html.EditorFor(model => model.Latitude, new { htmlAttributes = new { @class = "form-control" } })
                @Html.EditorFor(model => model.Longitude, new { htmlAttributes = new { @class = "form-control" } })
            </div>
        </div>

        <div id='printoutPanel'></div>

        <div id='myMap' style='width: 30vw; height: 30vh;'></div>
        <script type='text/javascript'>
        var map;
        function loadMapScenario() {
            map = new Microsoft.Maps.Map(document.getElementById('myMap'), {});
            setLocation();
        }
        </script>
        <script type='text/javascript' src='https://www.bing.com/api/maps/mapcontrol?key=YourBingMapsKey&callback=loadMapScenario' async defer></script>

        <button type="button" class="btn btn-default" onclick="setLocation()">Use this location</button>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </div>
    </div>



}

<script>
    function setLocation() {
        let center = map.getCenter();
        console.log("location set");
        document.getElementById("Latitude").value = center.latitude;
        document.getElementById("Longitude").value = center.longitude;
    }
</script>
<div>
    @Html.ActionLink("Back to List", "Index")
</div>

